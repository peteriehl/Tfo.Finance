@model Tfo.Finance.Domain.Entities.Stock

@{
    ViewBag.Title = "Search";
}

<body class="container">
    <div class="panel panel-primary">
        <h4 class="panel-heading text-center">Enter a Stock Symbol</h4>
        <div class="panel-body">
            @using (Html.BeginForm("Display", "Issuer"))
            {
                @Html.TextBoxFor(e => e.Symbol, new { @class = "form-control" })

                <div>
                    <button class="btn btn-primary center-block" type="submit">Submit</button>
                </div>
            }
        </div>
    </div>

</body>
